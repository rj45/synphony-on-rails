<h1>Listing sentences</h1>

<table>
  <tr>
    <th>Language project</th>
    <th>Reference</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sentences.each do |sentence| %>
  <tr>
    <td><%= sentence.language_project %></td>
    <td><%= sentence.reference %></td>
    <td><%= sentence.body %></td>
    <td><%= link_to 'Show', sentence %></td>
    <td><%= link_to 'Edit', edit_sentence_path(sentence) %></td>
    <td><%= link_to 'Destroy', sentence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

