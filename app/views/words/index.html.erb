<h1>Listing words</h1>

<table>
  <tr>
    <th>Language project</th>
    <th>Name</th>
    <th>Text frequency</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.language_project %></td>
    <td><%= word.name %></td>
    <td><%= word.text_frequency %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

